<mx:Button xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:mate="http://mate.asfusion.com/"
	icon="{buttonIcon}" 
	toolTip="{ResourceUtil.getInstance().getString('bbb.toolbar.videodock.toolTip.closeAllCams')}"
	click="closeAllCams()"
	implements="org.bigbluebutton.common.IBbbToolbarComponent">
	
	<mate:Listener type="{ShortcutEvent.VIDEODOCK_CLOSE_ALL_CAMS}" method="remoteClick" />
	
	<mx:Script>
		<![CDATA[
			import com.asfusion.mate.events.Dispatcher;
			
			import org.bigbluebutton.common.Images;
			import org.bigbluebutton.main.events.ShortcutEvent;
			import org.bigbluebutton.main.views.MainToolbar;
			import org.bigbluebutton.util.i18n.ResourceUtil;
			
			private var images:Images = new Images();
			
			[Bindable] public var buttonIcon:Class = images.close_all_cams;

			private var dispatcher:Dispatcher = new Dispatcher();
			
			public function closeAllCams():void{
				trace("closeAllCams clicked");
			}
			
			public function remoteClick(e:ShortcutEvent):void{
				closeAllCams();
			}
			
			public function getAlignment():String{
				return MainToolbar.ALIGN_RIGHT;
			}
			
			public function theory():String{
				return "Close all cameras button";
			}
		]]>
	</mx:Script>
</mx:Button>
